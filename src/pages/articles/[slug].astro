---
import Layout from '../../layouts/Layout.astro';
import { getAllArticles } from '../../lib/airtable';
import { marked } from 'marked';

export async function getStaticPaths() {
  const articles = await getAllArticles();
  
  return articles.map(article => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

const { article } = Astro.props;
const htmlContent = marked(article.body);
---

<Layout title={article.header}>
  <main>
    <article class="article">
      <div class="post-type">{article.postType}</div>
      <h1>{article.header}</h1>
      <div class="content" set:html={htmlContent} />
      <a href={article.originalLink} class="original-link">View Original Article</a>
    </article>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
  }

  .article {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .post-type {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    background: #f3f4f6;
    font-size: 0.875rem;
    margin-bottom: 1rem;
  }

  h1 {
    margin: 0 0 2rem 0;
    font-size: 2.5rem;
    line-height: 1.2;
  }

  .content {
    font-size: 1.125rem;
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .content :global(h2) {
    margin: 2rem 0 1rem;
    font-size: 1.8rem;
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
  }

  .original-link {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: #4f46e5;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 500;
  }

  .original-link:hover {
    background: #4338ca;
  }
</style>